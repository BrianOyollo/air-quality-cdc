{
  "name": "mongo-connector",
  "config": {
    "connector.class": "io.debezium.connector.mongodb.MongoDbConnector",
    "tasks.max": "1",
    "mongodb.connection.string": "mongodb://debezium:debeziumPass123@mongodb:27017/?replicaSet=rs0",
    "mongodb.user": "debezium",
    "mongodb.password": "debeziumPass123",
    "mongodb.authsource": "admin",
    "topic.prefix": "air_quality",
    "capture.scope": "deployment",
    "snapshot.mode": "initial",

    "transforms": "unwrap,Reroute",

    "transforms.unwrap.type":"io.debezium.connector.mongodb.transforms.ExtractNewDocumentState",
    "transforms.unwrap.delete.tombstone.handling.mode":"drop",
    "transforms.unwrap.add.headers":"op",

    "transforms.Reroute.type": "io.debezium.transforms.ByLogicalTableRouter",
    "transforms.Reroute.topic.regex": "air_quality\\.trials_db\\..*",
    "transforms.Reroute.topic.replacement": "air_quality_data",
    "transforms.Reroute.key.enforce.uniqueness": "true"
  }
}
